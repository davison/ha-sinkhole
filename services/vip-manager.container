[Unit]
Description=HA Sinkhole VIP Manager
Wants=network-online.target
After=network-online.target

[Container]
Image=ghcr.io/davison/ha-sinkhole-vip-manager:latest
EnvironmentFile=/etc/ha-sinkhole/sinkhole.env
Network=host
Capability=NET_ADMIN,NET_RAW
LogDriver=journald
Restart=always

[Install]
WantedBy=multi-user.target
